	set st3 = ..RunningMonitor()
	Do tInstaller.PopNS()
	Do tInstaller.PushNS(Namespace)
	&sql(select Name from %SYS.Task where Name = 'Rebuild SYSMON Cubes')
	if +SQLCODE 
